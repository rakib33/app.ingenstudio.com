@{
    ViewBag.Title = "Confirmation";
}

<div style="height:400px">
    <aside class="middle" style="text-align:center">
   
        @if (ViewBag.Message == "0")  //abnormal case
        { 
        <h5>Can not active your account.It Can not found your Id.</h5>
        }
        else if (ViewBag.Message == "1")
        {
            
         <h2>Welcome to Ingen Studio </h2>         
            <br />
            <br />
         <h5>Your account is now activated.</h5>
         <h5>Please click <a href="@Url.Action("Login", "Account")">here</a> to Sign In</h5>
        }
        else if (ViewBag.Message == "2") //if status not Active or Pending
        {    
            <h2>Your account is  @ViewBag.status</h2>
            <br /><br />
            <h5>If you are experiencing any problems activating your account please send an email to sales@ingenstudio.com</h5>         
        }
        else if (ViewBag.Message == "3") //can not found any record
        { 
            <h2>Can not found any record.</h2>
            <br /><br />
            <h5>If you are experiencing any problems activating your account please send an email to sales@ingenstudio.com</h5>     
        }
        else if(ViewBag.Message == "4")  //if any exception
        {
           <h2>Oops, try again!</h2>
            <br /><br />
            <h5>If you are experiencing any problems activating your account please send an email to sales@ingenstudio.com</h5>          
        }
        else if (ViewBag.Message == "5")  //already active
        { 
            <h2>Your account is  @ViewBag.status</h2>
            <br /><br />
            <h5>If you are experiencing any problems activating your account please send an email to sales@ingenstudio.com</h5>
        }
                    
          

    </aside>
</div>