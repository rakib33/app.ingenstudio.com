@{
    ViewBag.Title = "Mail Confirmation";
}


    
    <div style="height:400px">
    <aside class="middle" style="text-align:center;">
   
        @if(ViewBag.MailMessage == "Success")
        { 
            <h2>Please confirm your email account</h2>
            <br />
            <br />
            <br />
            <h5>You will receive a registration confirmation email from us in few minutes.</h5>
            <h5>Please follow the instructions in the email to activate your account.</h5>
            <br />
            <br />
            <br />
            <br />
            <br />
            <h5 style="color:gray">If you do not receive our email, please check your email’s spam box, or send an email with title “CONFIRMATION” to sales@ingenstudio.com </h5>
        }
        else
        {
            <h2>Failed to send Confirmation Email</h2>  
            <br />
            <br />
            <br />
            <h5>We have experienced a problem sending a confirmation email to your email account.</h5>
            <h5>Please send us an email at sales@ingenstudio.com and we will create the account for you. Alternatively, you can place order from www.freetrial.ingenstudio.com</h5>
        }
    
    
    </aside>
</div>
 


